  "dependencies": {
    "a-sync-waterfall": "^1.0.0",
    "chokidar": "^3.5.3",
    "commander": "^5.1.0",
    "fs": "^0.0.1-security"
  },
  "browser": "./browser/nunjucks.js",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "connect": "^3.6.5",
    "core-js": "^2.5.3",
    "cross-env": "^5.1.3",
    "eslint": "^4.13.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "expect.js": "*",
    "express": "4.x",
    "fs-extra": "^5.0.0",
    "get-port": "^3.2.0",
    "mocha": "< 8.x",
    "mocha-phantomjs-core": "^2.1.2",
    "mocha-phantomjs-istanbul": "0.0.2",
    "module-alias": "^2.0.3",
    "node-libs-browser": "^0.7.0",
    "phantomjs-prebuilt": "^2.1.16",
    "serve-static": "^1.13.1",
    "supertest": "*",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "buildDependencies": {
    "core-js": "^2.5.3",
    "module-alias": "^2.0.3",
    "node-libs-browser": "^0.7.0",
    "webpack": "^3.10.0"
  },
  "peerDependenciesMeta": {
    "chokidar": {
      "optional": true
    }
  },
  "engines": {
    "node": ">= 6.9.0"
  },
  "scripts": {
    "build:browser": "npx webpack build --config ./webpack.dev.js",
    "build:server": "tsc",
    "build": "npm run build:browser && npm run build:server",
    "codecov": "codecov",
    "mocha": "mocha -R spec tests",
    "lint": "eslint nunjucks scripts tests",
    "prepare": "npm run build",
    "test:instrument": "cross-env NODE_ENV=test scripts/bundle.js",
    "test:runner": "cross-env NODE_ENV=test NODE_PATH=tests/test-node-pkgs scripts/testrunner.js",
    "test": "npm run lint && npm run test:instrument && npm run test:runner"
  },
  "bin": {
    "nunjucks-precompile": "./bin/precompile"
  },
  "main": "server/nunjucks/index.js",
  "files": [
    "bin/**",
    "browser/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/benbriedis/nunjucksBB.git"
  },
  "keywords": [
    "template",
    "templating"
  ],
